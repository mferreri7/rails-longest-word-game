<h1>New Game</h1>
<ul class="char-list">
  <% @letters.each do |char| %>
    <li><%= char %></li>
  <% end %>
</ul>
<h2>What's the longest word you can find?</h2>
<form action="/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters.join%>
  <input type="text" placeholder="Your answer" name="user_answer">
  <input type="submit" value="Play">
</form>
